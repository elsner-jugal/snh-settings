<?xml version="1.0"?>
<config>
    <modules>
        <SNH_SkipStep1>
            <version>0.1.0</version>
        </SNH_SkipStep1>
    </modules>
    <global>
        <models>
            <skipstep1>
                <class>SNH_SkipStep1_Model</class>
            </skipstep1>
        </models>
        <helpers>
            <skipstep1>
                <class>SNH_SkipStep1_Helper</class>
            </skipstep1>
        </helpers>
        <blocks>
            <skipstep1>
                <class>SNH_SkipStep1_Block</class>
            </skipstep1>
            <checkout>
                <rewrite>
                    <onepage>SNH_SkipStep1_Block_Checkout_Onepage</onepage>
                </rewrite>
            </checkout>
        </blocks>
    </global>
    <frontend>
        <routers>
            <skipstep1>
                <use>standard</use>
                <args>
                    <module>SNH_SkipStep1</module>
                    <frontName>skipstep1</frontName>
                </args>
            </skipstep1>
        </routers>
        <translate>
            <modules>
                <SNH_SkipStep1>
                    <files>
                        <default>SNH_SkipStep1.csv</default>
                    </files>
                </SNH_SkipStep1>
            </modules>	
        </translate>
        <layout>
            <updates>
                <skipstep1>
                    <file>skipstep1.xml</file>
                </skipstep1>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <SNH_SkipStep1>
                    <files>
                        <default>SNH_SkipStep1.csv</default>
                    </files>
                </SNH_SkipStep1>
            </modules>	
        </translate>
    </adminhtml>
    <default>
        <snh_settings>
            <messages>
                <skipstep1_enabled>1</skipstep1_enabled>
                <default_method>guest</default_method>
                <plugandplay>1</plugandplay>
                <login_link>1</login_link>
                <custom_block>0</custom_block>
                <custom_validation>1</custom_validation>
            </messages>
        </snh_settings>
    </default>
</config>