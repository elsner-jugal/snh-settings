<?xml version="1.0"?>
<config>
     
    <sections>
        <snh_settings translate="label" module="core">
            <label>SNH Settings</label>
            <tab>general</tab>
            <frontend_type>text</frontend_type>
            <sort_order>9999</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <messages translate="label">
                    <label>Show/Remove headers in checkout</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>  
                    <fields>
                      <removeheaders_enabled>
                        <label>Remove Header</label>
                        <comment>Remove header in checkout steps</comment>
                        <frontend_type>select</frontend_type>
                        <source_model>adminhtml/system_config_source_yesno</source_model>
                        <sort_order>2</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>                    
                      </removeheaders_enabled>
                      <removefooters_enabled>
                        <label>Remove Footer</label>
                        <comment>Remove footer in checkout steps</comment>
                        <frontend_type>select</frontend_type>
                        <source_model>adminhtml/system_config_source_yesno</source_model>
                        <sort_order>3</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>                    
                      </removefooters_enabled>
                    </fields>                       
                </messages>
            </groups>
        </snh_settings>
    </sections>
</config>
